{
  "name": "novel-manuscript-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --port 8080 --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start --port 8080 --hostname 0.0.0.0",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "postinstall": "npx playwright install --with-deps chromium",
    "docker:build": "docker build -t novel-manuscript-tool .",
    "docker:run": "docker run -p 3000:3000 novel-manuscript-tool",
    "gcp:deploy": "gcloud builds submit --config cloudbuild.yaml",
    "gcp:setup": "gcloud config set project $GOOGLE_CLOUD_PROJECT && gcloud services enable cloudbuild.googleapis.com run.googleapis.com containerregistry.googleapis.com",
    "docker:test": "docker build -t novel-manuscript-tool-test . && docker run -p 3000:3000 --rm novel-manuscript-tool-test"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "playwright": "^1.47.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.3.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "lucide-react": "^0.294.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.0"
  }
}
